@model IEnumerable<GoodCompanyMVC.Models.Company>

@{
    ViewData["Title"] = "Index";
}

<h1>List of Companies</h1>

<p>
    <a asp-action="Create">Add a Company       |     </a>
    <a asp-action="UserIndex">  View My Companies</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)/ Site
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                <a href="@item.CompanyUrl" alt=" " go to site">@item.Name</a>
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </td>
        </tr>
        }
    </tbody>
</table>

