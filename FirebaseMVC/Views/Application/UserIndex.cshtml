@model IEnumerable<GoodCompanyMVC.Models.Application>

@{
    ViewData["Title"] = "UserIndex";
}

<h1>Application Tracker</h1>

<p>
    <a asp-action="Create">Add New Application</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Company @Html.DisplayNameFor(model => model.Company.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PositionLevel.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NextActionDue)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                @*<td>
                    @Html.DisplayFor(modelItem => item.Company.Name)
                </td>*@
                <td>
                    <a href="@item.Company.CompanyUrl" alt="company name">@item.Company.CompanyUrl</a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PositionLevel.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NextActionDue)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
