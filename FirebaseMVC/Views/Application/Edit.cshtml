@model GoodCompanyMVC.Models.ViewModels.ApplicationFormViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Application</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="Application.Id" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Application.PositionLevelId" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Application.CompanyId" type="hidden" />
            </div>
            <div class="form-group">
                <input asp-for="Application.UserProfileId" type="hidden" />
            </div>
            <div class="form-group">
                <label asp-for="Application.Title" class="control-label"></label>
                <input asp-for="Application.Title" class="form-control" />
                <span asp-validation-for="Application.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.Company.Name" class="control-label"></label>
                <input asp-for="Application.Company.Name" class="form-control" />
                <span asp-validation-for="Application.Company.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Application.NextAction" class="control-label"></label>
                <input asp-for="Application.NextAction" class="form-control" />
                <span asp-validation-for="Application.NextAction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.NextActionDue" class="control-label"></label>
                <input asp-for="Application.NextActionDue" class="form-control" />
                <span asp-validation-for="Application.NextActionDue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.PositionLevelId" class="control-label">Position Level</label>
                <select asp-for="Application.PositionLevelId" class="form-control">
                    @foreach (var positionLevel in Model.PositionLevelOptions)
                    {
                        <option value="@positionLevel.Id">@positionLevel.Level</option>
                    }
                </select>
                <span asp-validation-for="Application.PositionLevelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.DateListed" class="control-label"></label>
                <input asp-for="Application.DateListed" class="form-control" />
                <span asp-validation-for="Application.DateListed" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.SalaryRangeLow" class="control-label"></label>
                <input asp-for="Application.SalaryRangeLow" class="form-control" />
                <span asp-validation-for="Application.SalaryRangeLow" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.SalaryRangeHigh" class="control-label"></label>
                <input asp-for="Application.SalaryRangeHigh" class="form-control" />
                <span asp-validation-for="Application.SalaryRangeHigh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.FullBenefits" class="control-label"></label>
                <input asp-for="Application.FullBenefits" class="form-control" />
                <span asp-validation-for="Application.FullBenefits" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Application.DateApplied" class="control-label"></label>
                <input asp-for="Application.DateApplied" class="form-control" />
                <span asp-validation-for="Application.DateApplied" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="UserIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
